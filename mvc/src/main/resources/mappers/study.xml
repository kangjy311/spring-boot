<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.mvc.repository.DBStudyRepository">
    <!--  //////////////////////////[ Map ]////////////////////////////  -->
    <resultMap id="StudyResultMap" type="com.study.mvc.entity.Study">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="age" column="age"/>
        <result property="createDate" column="create_date"/>
    </resultMap>
    <!--  sql 스네이크표기법  java 카멜 -->

    <!--  //////////////////////////[ SQL ]////////////////////////////  -->
    <!-- 경로: 우클 - copy path/ - copy reference -->
    <insert
            id="save"
            parameterType="com.study.mvc.entity.Study"
            useGeneratedKeys="true"
            keyProperty="id"
    >
    <!-- id="메소드 명" parameterType="매개변수"-->
        insert into study_tb
        values (0, #{name}, #{age}, now())
    </insert>

    <select
            id="findStudyById"
            parameterType="Integer"
            resultMap="StudyResultMap"
    >
        select
            id,
            name,
            age,
            create_date
        from
            study_tb
        where
            id = #{id}
    </select>

    <select
            id="findStudyByName"
            parameterType="String"
            resultMap="StudyResultMap"
    >
        select
            id,
            name,
            age,
            create_date
        from
            study_tb
        where
            name = #{name}
    </select>

    <select
            id="findAll"
            resultMap="StudyResultMap"
    >
        select
            id,
            name,
            age,
            create_date
        from
            study_tb
    </select>
</mapper>